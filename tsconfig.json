{
  "compilerOptions": {
    "baseUrl": "./src",  // 假设你的代码在 src 目录
    "paths": {
      "@/*": ["*"]      // 设置路径别名 @ 指向 src 下的所有文件
    },
    "target": "ES6",     // 目标为 ES6
    "module": "commonjs", // 使用 CommonJS 模块系统
    "outDir": "./dist",  // 输出目录为 dist
    "strict": true,      // 开启严格模式
    "esModuleInterop": true, // 允许 CommonJS 模块的 ES 模块互操作性
    "noImplicitAny": false

  },
  "include": ["src/**/*.ts"] // 包含 src 目录下所有的 TypeScript 文件
}
